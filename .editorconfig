# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# PowerShell
[*.{ps1,psm1,psd1}]
indent_size = 4
trim_trailing_whitespace = true

[*.{ps1xml,props,xml,yaml,yml}]
indent_size = 2

# TOML
[*.toml]
trim_trailing_whitespace = false

# C#
[*.{cs}]
indent_size = 4
trim_trailing_whitespace = true

# Python
[*.py]
indent_size = 4
max_line_length = 80

# JSON
[*.json]
indent_size = 2
insert_final_newline = ignore

[*.config.json]
indent_style = tab
end_of_line = crlf

# Minified JavaScript
[**.min.js]
indent_style = ignore
insert_final_newline = ignore

# Makefiles
[Makefile]
indent_style = tab

# Batch
[*.bat]
indent_style = tab

# Mardown
[*.md]
trim_trailing_whitespace = false

